{
    "name": "spatie/flare-client-php",
    "description": "Send PHP errors to Flare",
    "keywords": [
        "spatie",
        "flare",
        "exception",
        "reporting"
    ],
    "homepage": "https://github.com/spatie/flare-client-php",
    "license": "MIT",
    "repositories" : [{"type": "path", "url" : "../ignition"}],
    "require": {
        "php": "^8.2",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.9",
        "psr/container": "^2.0",
        "spatie/backtrace": "^1.6.2",
        "spatie/error-solutions": "^2.0",
        "symfony/http-foundation": "^5.2|^6.0|^7.0",
        "symfony/mime": "^5.2|^6.0|^7.0",
        "symfony/process": "^5.2|^6.0|^7.0",
        "symfony/var-dumper": "^5.2|^6.0|^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.36.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-phpunit": "^1.4",
        "spatie/pest-plugin-snapshots": "^2.2",
        "spatie/ignition" : "@dev"
    },
    "suggest": {
        "spatie/ignition": "Add the best error page to your application"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\FlareClient\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\FlareClient\\Tests\\": "tests",
            "Spatie\\FlareClient\\Tests\\Shared\\": "shared"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "baseline": "vendor/bin/phpstan analyse --generate-baseline",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-main": "1.3.x-dev"
        }
    }
}
